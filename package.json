{
  "name": "dd2-saveeditor",
  "version": "0.1.0",
  "description": "Darkest Dungeon 2 Save File Editor",
  "main": ".vite/build/main.js",
  "author": {
    "name": "Koddy",
    "email": "bigkoddy@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "electron-vite dev",
    "build": "run-p type-check \"build-only {@}\" --",
    "build-only": "cross-env rm -r \".vite\" && electron-vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "package": "electron-builder build --win"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "vue": "^3.4.26"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@rushstack/eslint-patch": "^1.10.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vue/tsconfig": "^0.5.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "electron-builder-squirrel-windows": "^25.0.0-alpha.6",
    "electron-vite": "^2.2.0",
    "eslint": "^9.1.1",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vue-tsc": "^2.0.16"
  }
}
